<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state: no glow -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Set color for normal state -->
            <corners android:radius="24dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Pressed state: glowing effect with blue -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Color for pressed state -->
            <corners android:radius="24dp" /> <!-- Rounded corners -->
            <stroke android:color="@android:color/white" android:width="2dp" /> <!-- Stroke -->
            <gradient
                android:startColor="#0000FF"
            android:endColor="#1E90FF"
            android:angle="45" />
        </shape>
    </item>
</selector>
