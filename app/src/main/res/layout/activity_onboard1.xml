<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Onboard1">

    <!-- CardView Container for the icon, label, and value -->


    <!-- First TextView for main heading "Stay on top of your spends" -->

    <!-- Second TextView for subheading "Easily keep track all your income and spends at a single place" -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blue_gradient">

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="273dp"
            android:layout_height="128dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="87dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView24"
            app:srcCompat="@drawable/onfood" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="307dp"
            android:layout_height="160dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="59dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView23"
            app:srcCompat="@drawable/onshop" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="318dp"
            android:layout_height="71dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="105dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/onin" />

        <TextView
            android:id="@+id/title"
            android:layout_width="333dp"
            android:layout_height="35dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="66dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Stay on top of your spends"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView25" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="57dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Easily keep track all your income and spends at a single place"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <androidx.cardview.widget.CardView
            android:layout_width="395dp"
            android:layout_height="312dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_radius"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="299dp">

                <ImageView
                    android:id="@+id/accounts"
                    android:layout_width="222dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="54dp"
                    android:layout_marginEnd="55dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/getstart"
                    app:srcCompat="@drawable/accounts" />

                <ImageView
                    android:id="@+id/getstart"
                    android:layout_width="297dp"
                    android:layout_height="94dp"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="53dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/nexton" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
