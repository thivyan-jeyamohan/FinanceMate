<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Onboard1">

    <!-- CardView Container for the icon, label, and value -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blue_gradient">

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="223dp"
            android:layout_height="86dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="188dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.392"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView26"
            app:srcCompat="@drawable/on2f" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="241dp"
            android:layout_height="82dp"
            android:layout_marginStart="183dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView28"
            app:srcCompat="@drawable/on2s" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="349dp"
            android:layout_height="81dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/on2i" />

        <TextView
            android:id="@+id/title"
            android:layout_width="199dp"
            android:layout_height="33dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="66dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Set your budget"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView27" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="57dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Spend more wisely by setting limits for your top spend categories"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <androidx.cardview.widget.CardView
            android:layout_width="399dp"
            android:layout_height="314dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_radius"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/account"
                    android:layout_width="222dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="54dp"
                    android:layout_marginEnd="55dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/getstart"
                    app:srcCompat="@drawable/accounts" />

                <ImageView
                    android:id="@+id/getstart"
                    android:layout_width="297dp"
                    android:layout_height="94dp"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="53dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/getstarton" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- First TextView for main heading "Stay on top of your spends" -->

    <!-- Second TextView for subheading "Easily keep track all your income and spends at a single place" -->


</androidx.constraintlayout.widget.ConstraintLayout>
